    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "zod": "^3.23.8",
    "uuid": "^10.0.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "dotenv": "^16.4.5",
    "socket.io": "^4.8.0",
    "bullmq": "^5.18.0",
    "ioredis": "^5.4.1",
    "stripe": "^17.1.0",
    "mercadopago": "^2.0.11",
